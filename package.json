{
  "name": "crypthold",
  "version": "2.2.1",
  "description": "Secure encrypted config store for Node.js (HKDF, key rotation, lockfile concurrency, atomic writes).",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nodejs",
    "config",
    "typescript",
    "encryption",
    "keychain",
    "concurrency",
    "hkdf",
    "integrity",
    "esm",
    "cjs",
    "lockfile",
    "secure-storage",
    "key-rotation",
    "aes-256-gcm",
    "atomic-writes"
  ],
  "author": "Erdem Arslan <me@erdem.work>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laphilosophia/crypthold.git"
  },
  "bugs": {
    "url": "https://github.com/laphilosophia/crypthold/issues"
  },
  "homepage": "https://github.com/laphilosophia/crypthold#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@napi-rs/keyring": "^1.1.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  }
}
